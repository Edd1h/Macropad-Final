<Window x:Class="Macropad_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Macropad Shortcut App" Height="600" Width="420"
        Background="Black" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <!-- Knobs -->
        <Ellipse Fill="White" Stroke="Gray" StrokeThickness="3"
                 Width="70" Height="70" HorizontalAlignment="Left" Margin="100,30,0,0" VerticalAlignment="Top"/>
        <Ellipse Fill="White" Stroke="Gray" StrokeThickness="3"
                 Width="70" Height="70" HorizontalAlignment="Left" Margin="245,30,0,0" VerticalAlignment="Top"/>
        <!-- ComboBox Grid -->
        <Border BorderBrush="White" BorderThickness="4"
                CornerRadius="12" Margin="30,110,30,30" Background="Gray">
            <UniformGrid Rows="4" Columns="3" Margin="20">
                <ComboBox x:Name="comboBox1" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox2" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox3" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox4" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox5" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox6" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox7" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox8" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox9" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox10" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox11" Style="{StaticResource MacropadComboBoxStyle}"/>
                <ComboBox x:Name="comboBox12" Style="{StaticResource MacropadComboBoxStyle}"/>
            </UniformGrid>
        </Border>
    </Grid>
</Window>