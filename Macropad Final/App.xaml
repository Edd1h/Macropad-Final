<Application x:Class="Macropad_Final.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MacropadComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="10,35"/>
            <Setter Property="Foreground" Value="#3C3F41"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="ItemsSource">
                <Setter.Value>
                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>Ctrl+C</sys:String>
                        <sys:String>Ctrl+V</sys:String>
                        <sys:String>Ctrl+A</sys:String>
                        <sys:String>Ctrl+Z</sys:String>
                        <sys:String>Ctrl+Y</sys:String>
                        <sys:String>Ctrl+X</sys:String>
                        <sys:String>Ctrl+S</sys:String>
                        <sys:String>Ctrl+P</sys:String>
                        <sys:String>Ctrl+F</sys:String>
                        <sys:String>Ctrl+B</sys:String>
                        <sys:String>Ctrl+I</sys:String>
                        <sys:String>Ctrl+U</sys:String>
                        <sys:String>Ctrl+.</sys:String>
                        <sys:String>Ctrl+,</sys:String>
                        <sys:String>Alt+Tab</sys:String>
                        <sys:String>Alt+F4</sys:String>
                    </x:Array>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>